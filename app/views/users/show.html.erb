<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-10 col-sm-offset-1">
      <% if current_user.user_picture? %>
        <%= cl_image_tag current_user.user_picture.path, width: 200, height: 200, crop: :thumb, gravity: :face %>
      <% else %>
      <% end %>

      <h1><%= current_user.first_name.capitalize %> <%= current_user.last_name.capitalize %></h1>
      <p><%= current_user.summary %></p>
      <p>Account created since <%= current_user.created_at.year %></p>
      <%= link_to "Edit", edit_user_registration_path, class: "btn btn-primary" %>

      <p>My Bookings</p>
      <ul>
      <% current_user.bookings.each do |booking| %>
        <li><%= booking.tour.name %> with <%= booking.tour.user.first_name.capitalize %> (<%=booking.status %>)</li>
        <%= link_to "Cancelled", tour_booking_path(booking, booking.tour) %> <!-- FAIRE LE CONTROLEUR UPDATE DANS BOOKINGS.RB -->
      <% end %>
      </ul>
      <p>My Requests</p>
      <ul>
      <% current_user.tours.each do |tour| %>
        <li><%= tour.name %></li>
        <%= link_to "Accepted", tour_path(tour) %>
        <%= link_to "Cancelled", tour_path(tour) %>
      <% end %>
      </ul>
    </div>
  </div>
</div>

