<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-10 col-sm-offset-1">
      <% if current_user.user_picture? %>
        <%= cl_image_tag current_user.user_picture.path, width: 200, height: 200, crop: :thumb, gravity: :face %>
      <% else %>
      <% end %>

      <h1><%= current_user.first_name.capitalize %> <%= current_user.last_name.capitalize %></h1>
      <p><%= current_user.summary %></p>
      <p>Account created since <%= current_user.created_at.year %></p>
      <%= link_to "Edit", edit_users_path, class: "btn btn-primary" %>

      <p>My Bookings</p>
      <ul>
      <% current_user.bookings.each do |booking| %>
        <li><%= booking.id %> <%= booking.tour.name %> with <%= booking.tour.user.first_name.capitalize %> (<%=booking.status %>)</li>
        <%= form_for(booking) do |f|%>
          <%= f.hidden_field :status, :value => "cancelled" %>
          <%= f.button :submit, :class => 'btn btn-primary', data: { confirm: 'Are your Sure ?' } do  %>
            <i class="fa fa-times-circle"></i>
          <% end %>
        <% end %>
      <% end %>
      </ul>
      <p>My Requests</p>
      <ul>
      <% current_user.tours.each do |tour| %>
        <li><%= tour.name %></li>
        <%= form_for(booking) do |f|%>
          <%= f.hidden_field :status, :value => "cancelled" %>
          <%= f.button :submit, :class => 'btn btn-primary', data: { confirm: 'Are your Sure ?' } do  %>
            <i class="fa fa-times-circle"></i>
        <% end %>
        <%= link_to "Accepted", tour_path(tour) %>
        <%= link_to "Cancelled", tour_path(tour) %>
      <% end %>
      </ul>
    </div>
  </div>
</div>

