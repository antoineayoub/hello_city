  <div class="card-category"><%= tour.price.to_i %>â‚¬ / visite</div>
  <div class="card-description">
    <h2><%= tour.name.split("").first(30).join("") %> avec <%= tour.user.first_name %>...</h2>
    <p><%= tour.description.split("").first(60).join("")%>...</p>
  </div>
  <%= cl_image_tag tour.user.picture.path, {class: "card-user avatar", id: "avatar_user"}%>
  <%= link_to "", tour_path(tour), class: "card-link" %>
</div>

