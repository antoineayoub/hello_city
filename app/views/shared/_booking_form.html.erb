<div class="decide-booking-card">
  <div class="booking-title">
    <h3>Book Now!</h3>
  </div>
  <div class="booking-title">
    <h3>Price: <%= @tour.price.to_i %>â‚¬</h3>
  </div>
  <div class="form-booking">
    <%= simple_form_for [locals[:tour], locals[:booking]], method: 'post' do |f| %>
      <%= f.input :start_at, :as => :hidden, input_html: {class: 'datepicker'} %>
      <%= f.button :submit, 'Confirm Booking!', class: 'book-now-button btn btn-success'  %>
    <% end %>
  </div>
</div>


<% content_for(:after_js) do %>
  <%= javascript_tag do %>
    $('.datepicker').datepicker({
      format: "yyyy-mm-dd",
      weekStart: 1,
      clearBtn: true,
      daysOfWeekHighlighted: "0,6",
      todayHighlight: true,
      orientation: "top auto"
    });
    $('.datepicker').data('datepicker').hide = function () {};
    $('.datepicker').datepicker('show');
  <% end %>
<% end %>
