<div class="padded ">
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-sm-10 col-sm-offset-1">
        <div class="col-xs-12 col-sm-3">
          <% if @tour.user.picture %>
            <%= cl_image_tag @tour.user.picture.path, width: 200, height: 200, crop: :thumb, gravity: :face %>
          <% end %>
        </div>
        <div class="col-xs-12 col-sm-9">
          <h1 class="no-margin-top"><%= @tour.user.first_name.capitalize %> <%= @tour.user.last_name.capitalize %></h1>
          <p><%= @tour.user.summary %></p>
          <p>Account created since <%= current_user.created_at.year %></p>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="panel panel-info" style="margin-top:50px;">
        <div class="panel-heading">
          <h3 class="panel-title">All <%= @tour.user.first_name %>'s reviews</h3>
        </div>
        <div class="panel-body" style="max-height: 500px;overflow-y: scroll;">
            <%= render "shared/view_reviews", reviews: @reviews %>
        </div>
      </div>
    </div>
    <div class="row">
      <h3 style="padding-top: 30px; margin-top:100px;border-top:1px solid gray;"><%= @tour.user.first_name.capitalize %>'s other great tours</h3>
      <div class="container">
        <div class="row">
          <div class="container">
            <div class="row">
              <% @guide_tours.each do |tour| %>
              <div class="col-xs-12 col-sm-4 col-md-4">
                <%= render "shared/card_listing", tour: tour %>
              </div>
              <% end %>
             </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
